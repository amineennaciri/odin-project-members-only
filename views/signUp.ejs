<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Project Members Only</title>
    <link rel="stylesheet" href="../public/style.css">
</head>
<body>
    <% if (locals.messages.errors) { %>
        <% messages.errors.forEach( el => { %>
            <div class="alert alert-danger"><%= el.msg %></div>
        <% }) %>    
    <% } %>
    <h1>Please Sign Up</h1>
    <form action="/postUser" method="post">
        <div>
            <label for="firstN">Enter your first name:</label>
            <input type="text" name="firstN" id="firstN">
        </div>
        <div>
            <label for="lastN">Enter your last name:</label>
            <input type="text" name="lastN" id="lastN">
        </div>
        <div>
            <label for="email">Enter your email:</label>
            <input type="text" name="email" id="email">
        </div>
        <div>
            <label for="password">Enter your password:</label>
            <input type="password" name="password" id="password">
        </div>
        <div>
            <label for="confirmPassword">Confirm your password:</label>
            <input type="password" name="confirmPassword" id="confirmPassword">
        </div>
        <button type="submit">Confirm</button>
    </form>
    <script src="../public/main.js"></script>
</body>
</html>